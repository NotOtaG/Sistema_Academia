procedure TForm3.edtSeries1ChangeTracking(Sender: TObject);
var
  Texto: string;
  Numero: Double;
begin
  Texto := edtSeries1.Text;
  if not TryStrToFloat(Texto, Numero) then
    edtSeries1.Text := '';
end;

