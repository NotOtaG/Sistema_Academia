procedure TForm3.edtTreino1ChangeTracking(Sender: TObject);
var
  Texto: string;
begin
  Texto := edtTreino1.Text;
  if not Texto.IsEmpty then
  begin
    // Verifica se o texto contém apenas letras
    if not TRegEx.IsMatch(Texto, '^[A-Za-z]*$') then
      edtTreino1.Text := '';
  end;
end;

