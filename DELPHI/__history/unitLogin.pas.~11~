uses unitDM1;

procedure TForm3.Button1Click(Sender: TObject);
begin
TabControl1.ActiveTab:= TabItem2;
TabItem1.Visible:= false;
TabItem2.Visible:= true;
TabItem3.Visible:= false;
TabItem4.Visible:= false;
TabItem5.Visible:= false;
end;

procedure TForm3.Button2Click(Sender: TObject);
var
  Treino1: string;
  Series1: Integer;
begin
if ComboBox1.ItemIndex = 1 then
begin
    // Obtenha o valor do item selecionado
    Treino1:= edtTreino1.Text;
    Series1:= StrToInt(edtSeries1.Text);
    // Use o valor para salvar no banco de dados
    FDQuery1.SQL.Text := 'INSERT INTO Treino (Peito, Series) VALUES (:TextoTreino, :TextoSeries)';
    FDQuery1.ParamByName('TextoTreino').AsString := Treino1;
    FDQuery1.ParamByName('TextoSeries').AsInteger := Series1;
    FDQuery1.ExecSQL;
end;
TabControl1.ActiveTab:= TabItem2;
ComboBox1.ItemIndex:= 0;
edtTreino1.Text:= '';
edtTreino2.Text:= '';
edtTreino3.Text:= '';
edtTreino4.Text:= '';
edtTreino5.Text:= '';
edtSeries1.Text:= '';
edtSeries2.Text:= '';
edtSeries3.Text:= '';
edtSeries4.Text:= '';
edtSeries5.Text:= '';
end;

procedure TForm3.Button4Click(Sender: TObject);
begin

edtTreino1.Text:= '';
edtTreino2.Text:= '';
edtTreino3.Text:= '';
edtTreino4.Text:= '';
edtTreino5.Text:= '';
edtSeries1.Text:= '';
edtSeries2.Text:= '';
edtSeries3.Text:= '';
edtSeries4.Text:= '';
edtSeries5.Text:= '';
end;

